{
	"compilerOptions": {
		"target": "es6",
		"module": "commonjs",
		"outDir": "./bin",
		"strict": true,
		"esModuleInterop": true,
		"skipLibCheck": true,
		"noImplicitAny": false,
		"forceConsistentCasingInFileNames": true,
		"declaration": true,
		"moduleResolution": "node",
		"paths": {
			"@src/*": ["./src/*"]
		}
	},
	"include": ["src/**/*"]
}
